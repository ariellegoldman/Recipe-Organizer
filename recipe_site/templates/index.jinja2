{% extends "base.jinja2" %}

{% block body %}
    <h1>Home Page</h1>

    <p>Select the ingredients you want in your recipes</p>
    <form action="{{ url('recipe-list') }}" method="get">
    <h2>Ingredient List</h2>

        {% for ingredient in content.ingredients %}
           <input type="checkbox" id=ingredient name=ingredient value={{ ingredient.name }}>
            <label for="ingredient">{{ ingredient.name }}</label><br>
        {% endfor %}

    <h3>Dietary Restrictions</h3>

        {% for restriction in content.restrictions %}
           <input type="checkbox" id=restriction name=restriction value={{ restriction.name }}>
            <label for="restriction">{{ restriction.name }}</label><br>
        {% endfor %}

    <button type="submit">Search</button>
    </form>

{% endblock %}