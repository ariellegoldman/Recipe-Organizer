{% extends "base.jinja2" %}

{% block body %}

    <h1>{{ content.name }}</h1>
    <h2>Ingredients</h2>
        <ul>
        {% for ingredient in content.ingredients %}
            <li>{{ ingredient.name }}</li>
        {% endfor %}
        </ul>
    <h2>Directions</h2>
    {{ content.directions }}
    <h3> Dietary Categories</h3>
    <ul>
    {% for restriction in content.dietary_category %}
        <li>{{ restriction.name }}</li>
    {% endfor %}
    </ul>

    {% if user.is_authenticated() %}
        <form action=" " method="post">{% csrf_token %}
        <input type="submit" name="favourite" value="{{ content.id }}">Save as favourite</input>

            {% for user in users %}
                   <input id="current_user" name="current_user" value="{{ user.id }}" type="hidden">
                {% for favourite in user.favourite %}
                    {% if favourite.id == content.id %}

                    {% endif %}
                {% endfor %}
            {% endfor %}

        </form>
    {% endif %}
    <a href="{{ url('home') }}">Home</a>
{% endblock %}